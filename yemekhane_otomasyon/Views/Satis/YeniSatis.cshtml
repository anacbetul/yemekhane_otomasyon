@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model yemekhane_otomasyon.Models.Siniflar.SatisHareket

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.Yemekler)
    @Html.DropDownListFor(x => x.Yemekler.YemekTurId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Öğrenci")
    @Html.DropDownListFor(x => x.Ogrenci.OgrenciAd, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @*@Html.LabelFor(x => x.Admin)
    @Html.DropDownListFor(x => x.Admin.AdminId, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Fiyat)
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ToplamFiyat)
    @Html.TextBoxFor(x => x.ToplamFiyat, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>

